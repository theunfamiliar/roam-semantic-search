#!/bin/bash

set -euo pipefail

echo "‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ"
echo "üìç Connected to VPS - Starting Deploy"
echo "‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ"

cd /root/roam-semantic-search

echo "üîê Making scripts executable..."
chmod +x ./scripts/*.sh

echo "üì¶ Pulling latest from GitHub..."
git fetch origin
git reset --hard origin/main

echo "üß† Checking for server.py..."
if [ ! -f server.py ]; then
  echo "‚ùå server.py not found"
  exit 1
fi

echo "üõë Stopping API service..."
if ! systemctl stop semantic-api.service; then
  echo "‚ö†Ô∏è Failed to stop semantic-api.service (maybe not running)"
fi
pkill -f uvicorn || true
sleep 2

echo "üîÑ Checking port 8000..."
if lsof -i :8000; then
  echo "‚ùå Port 8000 is in use. Aborting."
  exit 1
else
  echo "‚úÖ Port 8000 is free"
fi

echo "üîÅ Restarting API service..."
systemctl start semantic-api.service

echo "‚è≥ Waiting for API to boot..."
sleep 3

echo "üßæ Checking root route..."
attempts=0
until curl -s -f http://localhost:8000/ > /dev/null; do
  ((attempts++))
  if [ $attempts -ge 10 ]; then
    echo "‚ùå API not responding at root route after 10 attempts"
    journalctl -u semantic-api.service --no-pager | tail -n 20
    exit 1
  fi
  sleep 1
  echo "...retrying ($attempts)"
done

echo "‚úÖ Deploy complete and API is live."
